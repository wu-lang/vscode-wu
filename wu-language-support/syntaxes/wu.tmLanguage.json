{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Wu",
	"patterns": [
		{ "include": "#block comments" },
		{ "include": "#oneliner comments" },
		{ "include": "#keywords" },
		{ "include": "#types"},
		{ "include": "#strings" },
		{ "include": "#raw strings" },
		{ "include": "#integers" },
		{ "include": "#floats" },
		{ "include": "#bools" },
		{ "include": "#declarations"},
		{ "include": "#cusswords"}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.wu",
				"match": "\\b(if|elif|else|while|for|in|loop|break|skip|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.wu",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.wu",
					"match": "\\\\."
				}
			]
		},
		"raw strings": {
			"name": "string.quoted.other.wu",
			"begin": "r\"",
			"end": "\"",
			"patterns": [ ]
		},
		"integers": {
			"name": "constant.number.integer.wu",
			"match": "[0-9]+",
			"patterns": [ ]
		},
		"floats": {
			"name": "constant.number.float.wu",
			"match": "[0-9]+.[0-9]*",
			"patterns": [ ]
		},
		"bools": {
			"name": "constant.language.wu",
			"match": "(true|false)",
			"patterns": [ ]
		},
		"oneliner comments": {
			"name": "comment.line.double-dash.wu",
			"begin": "--",
			"end": "\n",
			"patterns": [ { "include": "#cusswords"} ]
		},
		"block comments": {
			"name": "comment.block.wu",
			"begin": "---+",
			"end": "---+",
			"patterns": [ { "include": "#cusswords"} ]
		},
		"cusswords": {
			"name": "invalid.illegal.cussword.wu",
			"match": "\\b([Bb]itch|[Ff]uck|[Ff]ucking|[Ff]ucked|[Ff]ucky|[Ff]ucker|[Ff]aggot|[Cc]unt|[Tt]wat|[Pp]utin)\\b",
			"patterns": [ ]
		},
		"types": {
			"name": "storage.type.wu",
			"match": "\\b(struct|int|float|bool|char|string)\\b",
			"patterns": [ ]
		},
		"declarations": {
			"name": "variable.other.wu",
			"match": "(.*)\\w*(::|:|:=)",
			"patterns": [ ]
		}
	},
	"scopeName": "source.wu"
}